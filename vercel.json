{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ],
  "functions": {
    "api/upload.js": {
      "maxDuration": 60
    },
    "api/process.js": {
      "maxDuration": 120
    },
    "api/validate-pages.js": {
      "maxDuration": 30
    }
  },
  "outputDirectory": "client/dist"
}